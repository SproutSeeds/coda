{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "composite": true,
    "rootDir": "src",
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
