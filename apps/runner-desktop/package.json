{
  "name": "@coda/runner-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Coda Runner Companion desktop app for securely pairing local runners with the Coda platform.",
  "author": {
    "name": "Cody Mitchell",
    "email": "cody@codacli.com"
  },
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"CORE,VITE,MAIN,ELECTRON\" -c \"yellow,cyan,magenta,blue\" \"pnpm run dev:core\" \"pnpm run dev:vite\" \"pnpm run dev:main\" \"pnpm run dev:electron\"",
    "dev:core": "pnpm --filter @coda/runner-core build --watch",
    "dev:vite": "vite dev --host --port 5174",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on tcp:5174 dist/main/index.js && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5174 electron .",
    "icons": "node ../../scripts/generate-runner-icons.mjs",
    "prebuild": "pnpm run icons && pnpm --filter @coda/runner-core build",
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint ./src --ext .ts,.tsx",
    "package": "pnpm run build && pnpm run deploy",
    "deploy": "electron-builder --publish never",
    "clean": "rimraf dist",
    "postinstall": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@coda/runner-core": "workspace:*",
    "ws": "^8.18.3",
    "clsx": "^2.1.1",
    "electron-store": "^9.0.0",
    "lucide-react": "^0.544.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.10.0",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  }
}
